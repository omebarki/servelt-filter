<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>productsDetails</servlet-name>
        <servlet-class>omar.mebarki.product.ProductDetailsServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>productsUrls</servlet-name>
        <servlet-class>omar.mebarki.product.ProductUrlServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>productsDetails</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productsUrls</servlet-name>
        <url-pattern>/product/*</url-pattern>
    </servlet-mapping>
</web-app>
